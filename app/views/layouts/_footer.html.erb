  <div class="footer-widget section-padding footer-page">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="single-widget single-widget1">
            <%= image_tag("logo/logo.png", alt: "logo") %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="single-widget single-widget2 my-5 my-md-0">
            <h5 class="mb-4"><%= t("contact_us") %></h5>
            <div class="d-flex">
