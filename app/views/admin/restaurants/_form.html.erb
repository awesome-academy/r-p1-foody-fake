<%= form_for [:admin, @restaurant] do |f| %>
  <%= render "shared/error_messages", object: @restaurant %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= label_tag :province %>
  <%= select_tag :province_select, options_for_select(@provinces.map {|c| [c.name, c.provinceid]}.to_h), {class: "select_tag required", include_blank: "Select a province", :required => true} %>

  <%= label_tag :district %>
  <%= select_tag :district_select, {}, {class: "select_tag required", :required => true} %>

  <%= label_tag :ward %>
  <%= select_tag :ward_select, {}, {class: "select_tag required", :required => true} %>

  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control" %>

  <%= f.label :minprice %>
  <%= f.number_field :minprice, class: "form-control" %>

  <%= f.label :maxprice %>
  <%= f.number_field :maxprice, class: "form-control" %>

  <%= f.label :open_time %><br>
  <%= f.time_field :open_time,
      value: Settings.default_time_value,
      min: Settings.min_time_value,
      max: Settings.max_time_value %>
  <%= f.label :close_time %><br>
  <%= f.time_field :close_time,
      value: Settings.default_time_value,
      min: Settings.min_time_value,
      max: Settings.max_time_value %>
  <br>
  <br>
  <span class="picture">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>
  <%= f.label :preview %>
  <br>
  <img id="upload_preview" class="image_preview">
  <br>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
<script type="text/javascript">

</script>
