<tr class="row">
  <td class="col-md-1"><%= @i %></td>
  <td class="col-md-3"><%= food.name%></td>
  <td class="col-md-2"><%= food.price %></td>
  <td class="col-md-5">
    <% if food.image? %>
      <%= image_tag(food.image.url, height: "80", width: "80") %>
    <% else %>
      <%= image_tag("coming_soon.jpg", height: "80", width: "80") %>
    <% end %>
  </td>
  <td class="col-md-1">
    <%= link_to t("edit"), edit_manager_food_path(:id => food.id), class: "white-link btn btn-warning btn-block" %>
    <%= link_to t("delete"), deletefood_path(:id => food.id), method: :delete, class: "btn-danger btn btn-block white-link", data: { confirm: t("you_sure") } %>
  </td>
  <% @i = @i + 1 %>
</tr>
