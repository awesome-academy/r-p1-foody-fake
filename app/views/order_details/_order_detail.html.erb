<%= form_for(@order_detail) do |f| %>
  <%= render "shared/error_messages", object: @order_detail %>
  <div class="row">
    <div class="col-md-4">
      <a class="btn btn-danger button_food minus">-</a>
      <%= f.text_field :quantity, :id => id, class: "quantity_text_field", value: 0, :readonly => true %>
      <a class="btn btn-success button_food add">+</a>
    </div>
    <%= hidden_field_tag "order_detail[food_id]", "#{id}" %>
    <div class="col-md-4">
      <%= f.text_field :price, class: "price_text_field", :readonly => true, value: get_price(id) %>
    </div>
    <div class="col-md-4">
      <p></p>
      <%= f.submit t("update_cart"), class: "btn btn-success", data: { disable_with: false } %>
    </div>
  </div>
<% end %>

