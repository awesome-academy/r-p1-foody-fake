<% provide :title, @user.name %>
<div class="container area-info">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h5>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h5>
      </section>
    </aside>
  </div>
  <% if current_user? @user %>
    <nav>
      <h4 class="red-b"><%= t("order_history") %></h4>
      <table class="table">
        <tr>
          <th><%= t("serial")%></th>
          <th><%= t("place_prdered")%></th>
          <th><%= t("total_value") %></th>
          <th><%= t("status")%></th>
          <th><%= t("action")%></th>
        </tr>
        <% @i = 1 %>
        <%= render @orders %>
      </table>
    </nav>
  <% end %>
</div>
