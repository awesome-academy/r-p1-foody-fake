<% provide :title, t("contact") %>


<h1><%= t("contact") %></h1>
<p>
  <div class="container area-info">
  <form action="/action_page.php">
    <label for="fname"><%= t("first_name") %></label>
    <input type="text" id="fname" name="firstname" placeholder="Your name..">

    <label for="lname"><%= t("last_name") %></label>
    <input type="text" id="lname" name="lastname" placeholder="Your last name..">

    <label for="country"><%= t("country") %></label>
    <select id="country" name="country">
      <option value="australia">Australia</option>
      <option value="canada">Canada</option>
      <option value="usa">USA</option>
    </select>

    <label for="subject"><%= t("subject") %></label>
    <textarea id="subject" name="subject" placeholder="Write something.." class="contact_text_area">
    </textarea>

    <input type="submit" value="Submit">
  </form>
</div>
</p>
